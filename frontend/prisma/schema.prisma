// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LogEntry {
  id        String   @id @default(cuid())
  level     LogLevel @default(INFO)
  message   String
  timestamp DateTime @default(now())
  
  // Relations
  tags      LogTag[]
  solution  Solution?
  
  @@map("log_entries")
}

model Solution {
  id            String   @id @default(cuid())
  logEntryId    String   @unique
  issueText     String   
  solutionText  String   
  createdAt     DateTime @default(now())
  
  // Relations
  logEntry      LogEntry @relation(fields: [logEntryId], references: [id], onDelete: Cascade)
  tags          SolutionTag[]
  
  @@map("solutions")
}

// Tag models
model LogTag {
  id       String @id @default(cuid())
  logId    String
  name     String
  
  logEntry LogEntry @relation(fields: [logId], references: [id], onDelete: Cascade)
  
  @@unique([logId, name])
  @@map("log_tags")
}

model SolutionTag {
  id         String @id @default(cuid())
  solutionId String
  name       String
  
  solution   Solution @relation(fields: [solutionId], references: [id], onDelete: Cascade)
  
  @@unique([solutionId, name])
  @@map("solution_tags")
}

// Enums
enum LogLevel {
  LOG
  INFO
  WARN
  ERROR
  DEBUG
}
